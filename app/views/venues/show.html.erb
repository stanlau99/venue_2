<div class="page-header">
  <h3>Venue #<%= @venue.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Name</dt>
      <dd><%= @venue.name %></dd>

      <dt>Address</dt>
      <dd><%= @venue.address %></dd>

      <dt>Neighborhood</dt>
      <dd><%= @venue.neighborhood %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/venues" class="btn btn-primary">
        Back
      </a>
      <a href="/venues/<%= @venue.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_venue/<%= @venue.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>

<!-- A Venue has many dishes -->

<div class="row">
  <div class="col-md-12">
    <ul class="list-group">
      <li class="list-group-item list-group-item-info">
        Dishes
      </li>

      <% @venue.dishes.each do |dishesbyvenue| %>
        <li class="list-group-item">
          <a href="/dishesbyvenues/<%= dishesbyvenue.id %>">
            <%= dishesbyvenue.venueid %>
          </a>
          <div class="btn-group btn-group-xs pull-right">
            <a href="/dishesbyvenues/<%= dishesbyvenue.id %>" class="btn btn-primary">
              <i class="fa fa-search-plus"></i>
            </a>
            <a href="/dishesbyvenues/<%= dishesbyvenue.id %>/edit" class="btn btn-warning">
              <i class="fa fa-edit"></i>
            </a>
            <a href="/delete_dishesbyvenue/<%= dishesbyvenue.id %>" class="btn btn-danger" rel="nofollow">
              <i class="fa fa-trash-o"></i>
            </a>
          </div>
        </li>
      <% end %>

      <li class="list-group-item">
        <form action="/create_dishesbyvenue" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for venueid -->
      <div class="form-group">
        <label for="venueid" class="control-label">
          Venueid
        </label>

        <%= select_tag(:venueid, options_from_collection_for_select(Venue.all, :id, :id, @dishesbyvenue.venueid), :class => "form-control") %>
      </div>

      <!-- Label and input for dishid -->
      <div class="form-group">
        <label for="dishid" class="control-label">
          Dishid
        </label>

        <%= select_tag(:dishid, options_from_collection_for_select(Dish.all, :id, :id, @dishesbyvenue.dishid), :class => "form-control") %>
      </div>

      <button class="btn btn-block btn-success">
        Create Dishesbyvenue
      </button>
    </form>
      </li>
    </ul>
  </div>
</div>

<!-- A Venue has many bookmarks -->

<div class="row">
  <div class="col-md-12">
    <ul class="list-group">
      <li class="list-group-item list-group-item-info">
        Bookmarks
      </li>

      <% @venue.bookmarks.each do |bookmark| %>
        <li class="list-group-item">
          <a href="/bookmarks/<%= bookmark.id %>">
            <%= bookmark.userid %>
          </a>
          <div class="btn-group btn-group-xs pull-right">
            <a href="/bookmarks/<%= bookmark.id %>" class="btn btn-primary">
              <i class="fa fa-search-plus"></i>
            </a>
            <a href="/bookmarks/<%= bookmark.id %>/edit" class="btn btn-warning">
              <i class="fa fa-edit"></i>
            </a>
            <a href="/delete_bookmark/<%= bookmark.id %>" class="btn btn-danger" rel="nofollow">
              <i class="fa fa-trash-o"></i>
            </a>
          </div>
        </li>
      <% end %>

      <li class="list-group-item">
        <form action="/create_bookmark" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for userid -->
      <div class="form-group">
        <label for="userid" class="control-label">
          Userid
        </label>

        <input type="text" id="userid" name="userid" placeholder="Userid" class="form-control" value="">
      </div>

      <!-- Label and input for dishid -->
      <div class="form-group">
        <label for="dishid" class="control-label">
          Dishid
        </label>

        <%= select_tag(:dishid, options_from_collection_for_select(Dish.all, :id, :id, @bookmark.dishid), :class => "form-control") %>
      </div>

      <!-- Label and input for venueid -->
      <div class="form-group">
        <label for="venueid" class="control-label">
          Venueid
        </label>

        <%= select_tag(:venueid, options_from_collection_for_select(Venue.all, :id, :id, @bookmark.venueid), :class => "form-control") %>
      </div>

      <button class="btn btn-block btn-success">
        Create Bookmark
      </button>
    </form>
      </li>
    </ul>
  </div>
</div>
